<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Produk</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="bg-gray-100 text-gray-900 p-0 min-h-screen">

  <!-- Navbar -->
  <nav class="bg-white shadow-md px-6 py-4 flex items-center justify-between relative z-20">
    <div class="text-xl font-bold text-green-700">Edit Produk</div>
    <div class="hidden md:flex gap-4 items-center">
      <a href="/" class="text-gray-600 hover:text-blue-600 font-medium">Home</a>
      <a href="/admin/input" class="text-gray-600 hover:text-blue-600 font-medium">Input</a>
      <a href="/admin/add-product" class="text-gray-600 hover:text-blue-600 font-medium">Tambah Produk</a>
      <form method="POST" action="/logout">
        <button type="submit" class="flex items-center gap-1 bg-red-500 text-white px-3 py-2 rounded hover:bg-red-600 transition">
          <i data-lucide="log-out" class="w-4 h-4"></i> Logout
        </button>
      </form>
    </div>
    <button id="menu-toggle" class="md:hidden text-gray-600 focus:outline-none">
      <i data-lucide="menu" class="w-6 h-6"></i>
    </button>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden flex-col bg-white shadow-md px-6 py-4 space-y-2 md:hidden z-10">
    <a href="/" class="text-gray-600 hover:text-blue-600 font-medium">Home</a>
    <a href="/admin/input" class="text-gray-600 hover:text-blue-600 font-medium">Input</a>
    <a href="/admin/add-product" class="text-gray-600 hover:text-blue-600 font-medium">Tambah Produk</a>
    <form method="POST" action="/logout">
      <button type="submit" class="flex items-center gap-1 bg-red-500 text-white px-3 py-2 rounded hover:bg-red-600 transition">
        <i data-lucide="/logout" class="w-4 h-4"></i> Logout
      </button>
    </form>
  </div>

  <!-- Content -->
  <main class="flex justify-center items-center min-h-[calc(100vh-160px)] p-6">
    <form method="POST" action="/admin/edit-product/<%= produk.id %>" class="bg-white p-8 rounded-xl shadow-md w-full max-w-lg">
      <h1 class="text-2xl font-bold text-green-700 mb-6">Form Edit Produk</h1>

      <label class="block mb-2 font-medium">Nama Produk:</label>
      <input type="text" name="nama" value="<%= produk.nama %>" required class="w-full mb-4 p-2 border rounded" />

      <label class="block mb-2 font-medium">Harga:</label>
      <input type="number" name="harga" step="0.01" value="<%= produk.harga %>" required class="w-full mb-4 p-2 border rounded" />

      <label class="block mb-2 font-medium">Stok:</label>
      <input type="number" name="stok" value="<%= produk.jumlah %>" required class="w-full mb-6 p-2 border rounded" />

      <div class="flex justify-end">
        <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded transition">Simpan Perubahan</button>
      </div>
    </form>
  </main>

  <!-- Footer -->
  <footer class="mt-10 text-center text-gray-500 text-sm pb-6">
    &copy; <%= new Date().getFullYear() %> Copyright by Sai Pratama
  </footer>

  <script>
    lucide.createIcons();
    document.getElementById('menu-toggle').addEventListener('click', () => {
      const menu = document.getElementById('mobile-menu');
      menu.classList.toggle('hidden');
    });
  </script>
</body>
</html>
